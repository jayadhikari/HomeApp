<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jay_adhikariyahoo.homeapp.deviceDetail"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <Button
        android:id="@+id/toBtn"
        android:layout_width="124dp"
        android:layout_height="50dp"
        android:text="TO"
        android:textSize="24sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/fromBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toLeftOf="@+id/toTimeTv"
        android:layout_marginRight="28dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:hint="Enter Device Name"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText"
        android:text="Device ID "
        android:textSize="24sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintRight_toRightOf="@+id/textView3"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/deviceIdSpinner" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="149dp"
        android:layout_height="43dp"
        android:layout_below="@+id/deviceTypeSpinner"
        android:layout_toEndOf="@+id/channelSpinner"

        android:text="Channel    "
        android:textSize="24sp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/fromTimeTv"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:text="Device Type"
        android:textSize="24sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/channelSpinner"
        app:layout_constraintRight_toRightOf="@+id/textView2"
        android:layout_marginTop="48dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="48dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/deviceIdSpinner" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/fromSpinner"

        android:text="ON Period"
        android:textSize="24sp"
        android:layout_marginEnd="14dp"
        app:layout_constraintRight_toLeftOf="@+id/fromTimeTv"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/toTimeTv"
        android:layout_marginTop="128dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="128dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Spinner
        android:id="@+id/deviceIdSpinner"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toLeftOf="@+id/saveBtn"
        app:layout_constraintRight_toRightOf="@+id/editText"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_editor_absoluteY="84dp"
        tools:layout_editor_absoluteX="247dp" />

    <Spinner
        android:id="@+id/channelSpinner"
        android:layout_width="176dp"
        android:layout_height="40dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginEnd="9dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/deviceTypeSpinner"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/deviceTypeSpinner" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="62dp"
        android:layout_height="60dp"
        android:background="@drawable/ok"
        android:onClick="saveClick"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView4"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="137dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/cancelBtn"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="137dp"
        tools:layout_editor_absoluteY="524dp" />


    <Spinner
        android:id="@+id/deviceTypeSpinner"
        android:layout_width="176dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/textView4"
        app:layout_constraintLeft_toLeftOf="@+id/deviceIdSpinner"
        app:layout_constraintRight_toRightOf="@+id/deviceIdSpinner"
        app:layout_constraintTop_toBottomOf="@+id/deviceIdSpinner"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_editor_absoluteY="141dp"
        tools:layout_editor_absoluteX="246dp" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="64dp"
        android:layout_height="61dp"
        android:background="@drawable/delete"
        android:onClick="cancelClick"
        android:layout_above="@+id/saveBtn"
        android:layout_alignStart="@+id/deviceTypeSpinner"
        app:layout_constraintRight_toLeftOf="@+id/saveBtn"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="73dp"
        android:layout_marginRight="31dp" />

    <TextView
        android:id="@+id/fromTimeTv"
        android:layout_width="185dp"
        android:layout_height="47dp"
        android:layout_marginEnd="63dp"
        android:text="00:00 AM"
        android:textAlignment="center"
        android:textSize="30sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="63dp"
        tools:layout_editor_absoluteX="163dp" />

    <TextView
        android:id="@+id/toTimeTv"
        android:layout_width="187dp"
        android:layout_height="51dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="61dp"
        android:layout_marginTop="8dp"
        android:text="12:00 PM"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fromTimeTv"
        app:layout_constraintVertical_bias="0.046"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/fromBtn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="from"
        android:textSize="24sp"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="17dp"
        app:layout_constraintRight_toRightOf="@+id/textView3"
        android:layout_marginTop="1dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fromTimeTv" />

</android.support.constraint.ConstraintLayout>
